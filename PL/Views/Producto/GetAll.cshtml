@model ML.Producto
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<link rel="stylesheet" href="~/css/Styles/CardsProducto.css">


<div class="row">
    @foreach (ML.Producto producto in Model.Productos)
    {
        <div class="col">
            <div class="container">
                <div class="card">
                    <div class="imgBx">
                        <img src="" alt="nike-air-shoe">
                    </div>

                    <div class="contentBx">

                        <h2>@producto.Nombre</h2>

                        <div class="size">
                            <h3>Size :</h3>
                            <span>7</span>
                            <span>8</span>
                            <span>9</span>
                            <span>10</span>
                        </div>

                        <div class="color">

                            <h3>Color :</h3>
                            <span></span>
                            <span></span>
                            <span></span>
                        </div>
                        <a href="#">Buy Now</a>
                    </div>

                </div>
            </div>
        </div>
    }
   
</div>

